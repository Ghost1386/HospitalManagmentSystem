@model HospitalManagmentSystem.ViewModels.RecordViewModel;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
     <link rel="stylesheet" href="~/css/RecordDelete.css" />
</head>
<body>
<div class="edit-row">
    <div class="edit-item">
        <h1 class="title">Meddical</h1>
        <p class="subtitle">© 2022 Hospital’s name All Rights Reserved by Egor Novik</p>
    </div>
    <form asp-controller="Record" asp-action="Delete" method="post">
        <div class="form-group">
            <label class="control-label">Record Id: </label>
            @Html.TextBoxFor(x => x.Id, new {size = 32})
        </div>
        <input class="button" type="submit" value="Delete">
    </form>
</div>
</body>
</html>