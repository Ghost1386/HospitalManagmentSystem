@using HospitalManagmentSystem.Common.Enums
@model HospitalManagmentSystem.ViewModels.UserViewModel;

@{
    ViewData["Title"] = "Create user";
}

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Hospital Managment system</title>
<link rel="stylesheet" href="./css/main.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Merriweather:wght@700&display=swap"
		rel="stylesheet">
</head>

<body>
    <form asp-controller="User" asp-action="Create" method="post">
        <div class="form-group">
            <label class="control-label">Login: </label>
            @Html.TextBoxFor(x => x.Login, new { size = 32 })
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Email: </label>
            @Html.TextBoxFor(x => x.Email, new { size = 32 })
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Role: </label>
            @Html.DropDownListFor(x => x.Role,
                new SelectList(Enum.GetNames(typeof(Role))))
        </div>

        <div class="form-group">
            <label class="control-label">Password: </label>
            @Html.TextBoxFor(x => x.Password, new { size = 28 })
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Confirm password: </label>
            @Html.TextBoxFor(x => x.ConfirmPassword, new { size = 28 })
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <input type="submit" value="Create">
    </form>
</body>
</html>
