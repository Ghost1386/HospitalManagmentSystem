@model HospitalManagmentSystem.ViewModels.UserViewModel

<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registration</title>
</head>

<body>
    <form asp-controller="Authentication" asp-action="Registration" method="post">
        <div class="form-group">
            <label class="control-label">Login: </label>
            @Html.TextBoxFor(x => x.Login, new { size = 32 })
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Email: </label>
            @Html.TextBoxFor(x => x.Email, new { size = 32 })
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Password: </label>
            @Html.TextBoxFor(x => x.Password, new { size = 28 })
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Confirm password: </label>
            @Html.TextBoxFor(x => x.ConfirmPassword, new { size = 19 })
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <input type="submit" value="Registration">
    </form>
</body>
</html>
